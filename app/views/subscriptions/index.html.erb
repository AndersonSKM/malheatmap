<% content_for :head do %>
  <meta name="turbolinks-cache-control" content="no-cache">
<% end %>

<% @section_class = "is-medium" %>

<div>
  <div class="columns is-centered">
    <div class="column has-text-centered has-text-primary">
      <span class="icon is-large">
        <i class="fas fa-4x fa-fire"></i>
      </span>
    </div>
  </div>
  <div class="columns is-centered">
    <div class="columm">
      <h1 class="title has-text-centered"><%= t "app.title" %></h1>
    </div>
  </div>

  <div class="columns is-centered">
    <div class="column is-half">
      <%= form_with model: @subscription, method: "post" do |form| %>
        <div class="field">
          <p class="has-text-centered">
            <%= t ".enter_your_mal_profile_html" %>
          </p>
        </div>

        <div class="field notifications-container">
        </div>

        <div class="field has-addons">
          <div class="control is-expanded">
            <%= form.text_field :username,
                                id: "username",
                                class: "input",
                                placeholder: t(".username.placeholder")
            %>
          </div>

          <div class="control">
            <%= form.button "Subscribe",
                            class: "button is-primary",
                            data: { disable_with: "<i class='fas fa-spinner fa-spin'></i>" }
            %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="loader-container"></div>
</div>

- page_title @user.username
- meta_description t(".meta.description", username: @user.username)
- content_for :meta do
  meta name="tracker-source" content="User Profile"

.is-align-self-center
  .columns.is-centered
    .column.is-10
      .columns.is-multiline.is-gapless
        .column.is-full.has-text-centered.mt-2
          = link_to root_path do
            span.icon.is-small
              i.fas.fa-3x.fa-fire.has-text-primary
        .column.is-full.has-text-centered.mt-2
          h3.title.is-3
            = link_to t("app.title"), root_path, class: "has-text-black-ter"

        .columns.is-horizontal.is-centered.mt-6.is-variable.is-6
          - if signed_in?
            .column.is-3
              = render "side_menu"
          .column.is-9
            .columns.is-multiline
              - cache @user do
                .column.is-full
                  article.media
                    figure.user-avatar.media-left
                      p.image.is-96x96
                        img src=@user.avatar_url alt="User Avatar"
                    .media-content
                      p
                        = link_to(profile_url(@user.username), target: "_blank", rel: "noopener noreferrer", class: "is-size-4") do
                          = @user.username
                      .bb-code.pt-3
                        = render partial: "users/bb_code"

              .column.is-full
                = turbo_frame_tag dom_id(@user, "activities") do
                  = render partial: "users/activities", locals: { user: @user, calendar: @calendar, selected_year: @selected_year }
